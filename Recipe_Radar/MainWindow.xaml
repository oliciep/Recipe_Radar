<Window x:Class="RecipeRadar.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow" Height="600" Width="400"
    Background="LightGreen">
    <Border Padding="10">
        <StackPanel>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32">
                Welcome to Recipe Radar!
            </TextBlock>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="1" />
                </Grid.ColumnDefinitions>

                <Button x:Name="FindButton" Margin="0 0 10 0" Grid.Column="1" Content="Find Recipes" Background="Green"/>
            </Grid>
        </StackPanel>
    </Border>
</Window>